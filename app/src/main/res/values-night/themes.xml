<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/light_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />

    <style name="CustomSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/iv_branding
        </item>
        <item name="windowSplashScreenBackground">@color/grey</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TodoApp</item>
    </style>


    <style name="HeaderText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>

    </style>


    <style name="CustomCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">70dp</item>
        <item name="cornerSizeBottomLeft">70dp</item>
    </style>

    <style name="CustomFab" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/light_blue</item>
    </style>

</resources>